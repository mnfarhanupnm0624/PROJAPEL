@inject IHttpContextAccessor HttpContextAccessor
@inject IConfiguration Configuration
@{
#pragma warning disable CS8602
    string _titleTop = HttpContextAccessor.HttpContext.Session.GetString("_titleTop") ?? "Dashboard";
    string _titleSmall = HttpContextAccessor.HttpContext.Session.GetString("_titleSmall") ?? "Dashboard";
    string _titleSmallSub = HttpContextAccessor.HttpContext.Session.GetString("_titleSmallSub") ?? "Dashboard";

    var _path = @Configuration.GetSection("MySetting")["ServerPath"];
    var url = Context.Request.Path;
    string[] getUrl = url.ToString().Split('/');
    string menus = getUrl[getUrl.Length - 1];

#pragma warning restore CS8602
    var _showDate = DateTime.Now.ToString("MMM dd");
}
<!--begin::Toolbar container-->
<div class="container-fluid py-6 py-lg-0 d-flex flex-column flex-lg-row align-items-lg-stretch justify-content-lg-between">
    <!--begin::Page title-->
    <div class="page-title d-flex justify-content-center flex-column me-5">
        <!--begin::Title-->
        <h1 class="d-flex flex-column text-dark fw-bold fs-3 mb-0">@_titleTop</h1>
        <!--end::Title-->
        <!--begin::Breadcrumb-->
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 pt-1">
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
                <a href="/" class="text-muted text-hover-primary">Home</a>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-200 w-5px h-2px"></span>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
                <a href="@_path/Senarai/SiasatanSkrinList" class="text-muted text-hover-primary">@_titleSmall</a>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item">
                <span class="bullet bg-gray-200 w-5px h-2px"></span>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">@_titleSmallSub</li>
            <!--end::Item-->
            <!--begin::Item-->
            @*<li class="breadcrumb-item text-dark">Default</li>*@
            <!--end::Item-->
        </ul>
        <!--end::Breadcrumb-->
    </div>
    <!--end::Page title-->
    <!--end::Toolbar container  align-items-stretch overflow-auto pt-3 pt-lg-0-->
    <div class="d-flex">
        <div class="d-flex align-items-center">
            <!--begin::Label fs-7 fw-bold text-gray-650 pe-4 text-nowrap d-none d-xxl-block-->
            <span class="fs-7">
                <button class="btn btn-light-info">Today : <b>@_showDate</b></button>
            </span>
            <!--end::Label-->
        </div>
    </div>
</div>
